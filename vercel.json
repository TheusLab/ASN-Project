{
  "version": 2,
  "name": "asn-project",
  "builds": [
    {
      "src": "frontend/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "backend/go/main.go",
      "use": "@vercel/go"
    },
    {
      "src": "backend/python/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/go/main.go" },
    { "src": "/python/(.*)", "dest": "/backend/python/$1" },
    { "src": "/(.*)", "dest": "/frontend/public/index.html" }
  ]
}